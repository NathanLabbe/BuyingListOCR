<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.AddElement">

    <include
        android:id="@+id/toolbarAdd"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/activity_add_element_nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Name of your element"
        />

    <EditText
        android:id="@+id/activity_add_element_quantityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:hint="Quantity"/>

    <Button
        android:id="@+id/activity_add_element_addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Add"
        android:onClick="addElement"/>

    <TextView
        android:id="@+id/activity_add_element_alertTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="#80ff0000"
        android:textAlignment="center"
        android:text="TextView"/>

</LinearLayout>